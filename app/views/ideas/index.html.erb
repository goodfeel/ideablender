<div class="span12">
  <div class="well">
    <div class="add-idea-button">
      <%= link_to " New idea", new_idea_path, class: 'icon-lightbulb btn btn-success pull-right' %>
    </div>
    <div class="container">
      <% if params[:keyword] %>
        <%= "<h4>Search idea with keyword: #{params[:keyword]} </h4>".html_safe %>
      <% else %>
        <h3>Blend Ideas</h3>
      <% end %>
    </div>
    <hr />
    <div class="container">
      <div class="span10">
        <%= render @ideas %>
      </div>
    </div>
  </div>

<br />
